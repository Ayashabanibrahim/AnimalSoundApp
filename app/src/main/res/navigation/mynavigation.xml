<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mynavigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.project.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_animalFragment"
            app:destination="@id/animalFragment" />
        <action
            android:id="@+id/action_homeFragment_to_birdFragment"
            app:destination="@id/birdFragment" />

    </fragment>
    <fragment
        android:id="@+id/animalFragment"
        android:name="com.example.project.AnimalFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_animal" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.project.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/birdFragment"
        android:name="com.example.project.BirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_bird" />
    <fragment
        android:id="@+id/favFragment"
        android:name="com.example.project.FavFragment"
        android:label="fragment_fav"
        tools:layout="@layout/fragment_fav" />
</navigation>